            <!-- TEntry tiene un fondo circular, no se agregan dentro del Style porque son campos personalizados y no los reconoce -->
            <OnPlatform x:TypeArguments="Color"     x:Key="OnPlatformBorderColorTEntry"     Android="White"       iOS="White"       Default="White"/>
            <OnPlatform x:TypeArguments="x:Int32"   x:Key="OnPlatformBorderRadiusTEntry"    Android="15"            iOS="20"            Default="25"/>
            <OnPlatform x:TypeArguments="x:Int32"   x:Key="OnPlatformBorderWidthTEntry"     Android="1"             iOS="1"             Default="1"/>
            <OnPlatform x:TypeArguments="Thickness" x:Key="OnPlatformPaddingTEntry"         Android="20,10,20,10"   iOS="20,10,20,10"   Default="20,10,20,10"/>


            <!-- Estilos de Barra de Navegación -->
            <Style TargetType="Element" x:Key="StyleShellNavegacion">
                <Setter Property="Shell.BackgroundColor"        Value="{AppThemeBinding Default={StaticResource ColorBarradeNavegacionClaro},           Dark={StaticResource ColorBarradeNavegacionOscuro}}"/>
                <Setter Property="Shell.ForegroundColor"        Value="{AppThemeBinding Default={StaticResource ColorFlechaNavegacionClaro},            Dark={StaticResource ColorFlechaNavegacionOscuro}}"/>
                <Setter Property="Shell.TitleColor"             Value="{AppThemeBinding Default={StaticResource ColorTextoNavegacionClaro},             Dark={StaticResource ColorTextoNavegacionOscuro}}"/>
                <Setter Property="Shell.TabBarTitleColor"       Value="{AppThemeBinding Default={StaticResource ColorTextoNavegacionActivoClaro},       Dark={StaticResource ColorTextoNavegacionActivoOscuro}}"/>
                <Setter Property="Shell.TabBarBackgroundColor"  Value="{AppThemeBinding Default={StaticResource ColorTabdeNavegacionClaro},             Dark={StaticResource ColorTabdeNavegacionOscuro}}"/>
                <Setter Property="Shell.UnselectedColor"        Value="{AppThemeBinding Default={StaticResource ColorTextoNavegacionInactivoClaro},     Dark={StaticResource ColorTextoNavegacionInactivoOscuro}}"/>
                <Setter Property="Shell.DisabledColor"          Value="{AppThemeBinding Default={StaticResource ColorTextoNavegacionDeshabilitadoClaro},Dark={StaticResource ColorTextoNavegacionDeshabilitadoOscuro}}"/>
            </Style>

            <!-- Estilos de NavegationPage -->
            <Style TargetType="{x:Type NavigationPage}">
                <Setter Property="BarBackgroundColor"   Value="{AppThemeBinding Default={StaticResource ColorBarradeNavegacionClaro},   Dark={StaticResource ColorBarradeNavegacionOscuro}}"/>
                <Setter Property="BarTextColor"         Value="{AppThemeBinding Default={StaticResource ColorTextoNavegacionClaro},     Dark={StaticResource ColorTextoNavegacionOscuro}}"/>
            </Style>

            <!-- Estilos Menú Lateral -->
            <LinearGradientBrush x:Key="LinearGradientBrushMenuLateral" 
                                 StartPoint="0.5,0"
                                 EndPoint="0.5,1">
                <GradientStop Color="{AppThemeBinding Default={StaticResource ColorMenuLateralClaro1}, Dark={StaticResource ColorMenuLateralOscuro1}}"
                              Offset="0.0" />
                <GradientStop Color="{AppThemeBinding Default={StaticResource ColorMenuLateralClaro2}, Dark={StaticResource ColorMenuLateralOscuro2}}"
                              Offset="0.3" />
                <GradientStop Color="{AppThemeBinding Default={StaticResource ColorMenuLateralClaro3}, Dark={StaticResource ColorMenuLateralOscuro3}}"
                              Offset="0.7" />
                <GradientStop Color="{AppThemeBinding Default={StaticResource ColorMenuLateralClaro4}, Dark={StaticResource ColorMenuLateralOscuro4}}"
                              Offset="1.0" />
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="LinearGradientBrushMenuLateralFondo"
                                 StartPoint="1,0"
                                 EndPoint="0,1">
                <GradientStop Color="{AppThemeBinding Default={StaticResource ColorMenuLateralFondoClaro1}, Dark={StaticResource ColorMenuLateralFondoOscuro1}}"
                              Offset="0.0" />
                <GradientStop Color="{AppThemeBinding Default={StaticResource ColorMenuLateralFondoClaro2}, Dark={StaticResource ColorMenuLateralFondoOscuro2}}"
                              Offset="0.3" />
                <GradientStop Color="{AppThemeBinding Default={StaticResource ColorMenuLateralFondoClaro3}, Dark={StaticResource ColorMenuLateralFondoOscuro3}}"
                              Offset="0.7" />
                <GradientStop Color="{AppThemeBinding Default={StaticResource ColorMenuLateralFondoClaro4}, Dark={StaticResource ColorMenuLateralFondoOscuro4}}"
                              Offset="1.0" />
            </LinearGradientBrush>
            <Style TargetType="{x:Type Label}" Class="FlyoutItemLabelStyle">
                <Setter Property="TextColor"        Value="{AppThemeBinding Default={StaticResource ColorMenuElementoClaro}, Dark={StaticResource ColorMenuElementoOscuro}}"/>
                <Setter Property="FontFamily"       Value="{StaticResource OnPlatformFontFamily}"/>
                <Setter Property="FontSize"         Value="Medium"/>
            </Style>
            <Style TargetType="{x:Type Image}" Class="FlyoutItemImageStyle">
                <Setter Property="Aspect"   Value="AspectFit"/>
            </Style>
            <Style TargetType="Layout" Class="FlyoutItemLayoutStyle"
                   ApplyToDerivedTypes="True">
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="Transparent"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Selected">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="{AppThemeBinding Default={StaticResource ColorMenuElementoSeleccionadoClaro},   Dark={StaticResource ColorMenuElementoSeleccionadoOscuro}}"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="Transparent"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>

            <!-- Estilos de Fondo de ContentPage -->
            <LinearGradientBrush x:Key="LinearGradientBrushFondo"
                                 StartPoint="0.5,0"
                                 EndPoint="0.5,1.0">
                <GradientStop Color="{AppThemeBinding Default={StaticResource ColorFondoClaro1}, Dark={StaticResource ColorFondoOscuro1}}"
                              Offset="0.1" />
                <GradientStop Color="{AppThemeBinding Default={StaticResource ColorFondoClaro2}, Dark={StaticResource ColorFondoOscuro2}}"
                              Offset="0.3" />
                <GradientStop Color="{AppThemeBinding Default={StaticResource ColorFondoClaro3}, Dark={StaticResource ColorFondoOscuro3}}"
                              Offset="0.5"/>
                <GradientStop Color="{AppThemeBinding Default={StaticResource ColorFondoClaro4}, Dark={StaticResource ColorFondoOscuro4}}"
                              Offset="1.0" />
            </LinearGradientBrush>

            <Style TargetType="{x:Type ContentPage}"
                   ApplyToDerivedTypes="True">
                <Setter Property="Background"               Value="{StaticResource LinearGradientBrushFondo}"/>
                <!--Setter Property="BackgroundColor"          Value="{AppThemeBinding Default={StaticResource ColorFondoSolidoClaro},     Dark={StaticResource ColorFondoSolidoOscuro}}"/-->
                <!--Setter Property="BackgroundImageSource"    Value="{AppThemeBinding Default={StaticResource FileImageSourceFondoClaro}, Dark={StaticResource FileImageSourceFondoOscuro}}"/-->
            </Style>

            <!-- Estilos Generales -->
            <Style TargetType="{x:Type SearchBar}">
                <Setter Property="TextColor"            Value="{AppThemeBinding Default={StaticResource ColorTextoEntryClaro}, Dark={StaticResource ColorTextoEntryOscuro}}"/>
                <Setter Property="FontFamily"           Value="{StaticResource OnPlatformFontFamily}"/>
                <Setter Property="BackgroundColor"      Value="Transparent"/>
            </Style>
            <Style TargetType="{x:Type Label, Span}">
                <Setter Property="TextColor"    Value="{AppThemeBinding Default={StaticResource ColorTextoClaro},  Dark={StaticResource ColorTextoOscuro}}"/>
                <Setter Property="FontFamily"   Value="{StaticResource OnPlatformFontFamily}"/>
            </Style>
            <Style TargetType="Entry">
                <Setter Property="FontFamily"           Value="{StaticResource OnPlatformFontFamily}"/>
