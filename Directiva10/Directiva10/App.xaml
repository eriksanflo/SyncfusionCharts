            <OnPlatform x:TypeArguments="Thickness" x:Key="OnPlatformMarginListViewElemento"                Android="14,0,14,0"     iOS="16,0,16,0"     Default="14,0,14,0"/>
            <OnPlatform x:TypeArguments="x:Double"  x:Key="OnPlatformHeightRequestCollectionViewHeaderiOS"  Android="0"             iOS="40"            Default="0"/>
            <OnPlatform x:TypeArguments="Thickness" x:Key="OnPlatformPaddingCollectionViewHeaderiOS"        Android="0,0,0,0"       iOS="0,40,0,0"      Default="0"/>
