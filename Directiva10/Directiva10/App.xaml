                <Setter Property="BackgroundColor"      Value="Transparent"/>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{AppThemeBinding Default={StaticResource ColorTextoEntryClaro}, Dark={StaticResource ColorTextoEntryOscuro}}"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Focused">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="{AppThemeBinding Default={StaticResource ColorTextoEntryActivoClaro},   Dark={StaticResource ColorTextoEntryActivoOscuro}}"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="Disabled">
                                <VisualState.Setters>
                                    <Setter Property="TextColor" Value="Transparent"/>
