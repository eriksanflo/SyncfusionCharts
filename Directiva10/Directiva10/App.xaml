            <Style TargetType="{x:Type ActivityIndicator}" x:Key="StyleActivityIndicatorCargando">
                <Setter Property="Color"            Value="{AppThemeBinding Default={StaticResource ColorBarradeNavegacionClaro},   Dark={StaticResource ColorBarradeNavegacionOscuro}}"/>
